{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".expo/**", "release/**"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "clean": {
      "cache": false
    },
    "@repo/web#dev": {
      "cache": false,
      "persistent": true
    },
    "@repo/electron#dev": {
      "cache": false,
      "persistent": true
    },
    "@repo/server#dev": {
      "cache": false,
      "persistent": true
    }
  }
}
