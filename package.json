{
  "name": "livestore-turbo",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@repo/server --filter=@repo/web",
    "dev:web": "turbo run dev --filter=@repo/server --filter=@repo/web",
    "dev:mobile": "pnpm --filter @repo/mobile start",
    "dev:electron": "turbo run dev --filter=@repo/electron",
    "dev:server": "pnpm --filter @repo/server dev",
    "dev:all": "turbo run dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "test:e2e:web": "pnpm --filter @repo/web test:e2e",
    "test:e2e:electron": "pnpm --filter @repo/electron test:e2e",
    "test:e2e:mobile": "pnpm --filter @repo/mobile test:e2e",
    "deploy": "turbo run deploy",
    "deploy:server": "pnpm --filter @repo/server deploy",
    "deploy:web": "pnpm --filter @repo/web deploy",
    "deploy:electron": "pnpm --filter @repo/electron deploy",
    "deploy:mobile": "pnpm --filter @repo/mobile deploy"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  }
}
