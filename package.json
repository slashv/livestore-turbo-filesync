{
  "name": "livestore-turbo",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@repo/server --filter=@repo/web --filter=@repo/electron --filter=@repo/mobile",
    "dev:web": "turbo run dev --filter=@repo/web",
    "dev:mobile": "pnpm --filter @repo/mobile start",
    "dev:electron": "turbo run dev --filter=@repo/electron",
    "dev:server": "pnpm --filter @repo/server dev",
    "dev:all": "turbo run dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "test:e2e:web": "pnpm --filter @repo/web test:e2e",
    "test:e2e:electron": "pnpm --filter @repo/electron test:e2e",
    "test:e2e:mobile": "pnpm --filter @repo/mobile test:e2e",
    "deploy:preview": "turbo run deploy:preview",
    "deploy:prod": "turbo run deploy:prod",
    "deploy:server:preview": "pnpm --filter @repo/server deploy:preview",
    "deploy:server:prod": "pnpm --filter @repo/server deploy:prod",
    "deploy:web:preview": "pnpm --filter @repo/web deploy:preview",
    "deploy:web:prod": "pnpm --filter @repo/web deploy:prod",
    "deploy:electron:preview": "pnpm --filter @repo/electron deploy:preview",
    "deploy:electron:prod": "pnpm --filter @repo/electron deploy:prod",
    "deploy:mobile:preview": "pnpm --filter @repo/mobile deploy:preview",
    "deploy:mobile:prod": "pnpm --filter @repo/mobile deploy:prod",
    "release": "npm version --include-workspace-root && git push && git push --tags",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*": "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
  }
}
