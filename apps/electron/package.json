{
  "name": "@repo/electron",
  "version": "1.0.0",
  "private": true,
  "description": "LiveStore FileSync Gallery - Electron Desktop App",
  "author": "Victor Nyberg",
  "main": "dist/main/index.js",
  "scripts": {
    "clean": "rm -rf dist out",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "deploy:local": "electron-vite build --mode production && electron-builder",
    "deploy:gh": "electron-vite build --mode production && electron-builder --publish always",
    "deploy:gh:mac": "electron-vite build --mode production && electron-builder --mac --publish always",
    "deploy:gh:win": "electron-vite build --mode production && electron-builder --win --publish always",
    "deploy:gh:linux": "electron-vite build --mode production && electron-builder --linux --publish always",
    "test:e2e": "VITE_API_URL=http://localhost:8787 pnpm build && playwright test --config=e2e/playwright.config.ts",
    "test:e2e:headed": "pnpm build && playwright test --config=e2e/playwright.config.ts --headed"
  },
  "dependencies": {
    "@livestore-filesync/core": "workspace:*",
    "@livestore-filesync/image": "workspace:*",
    "@livestore-filesync/opfs": "workspace:*",
    "@livestore/adapter-web": "0.4.0-dev.22",
    "@livestore/livestore": "0.4.0-dev.22",
    "@livestore/peer-deps": "0.4.0-dev.22",
    "@livestore/react": "0.4.0-dev.22",
    "@livestore/sync-cf": "0.4.0-dev.22",
    "@livestore/wa-sqlite": "0.4.0-dev.22",
    "@repo/store": "workspace:*",
    "@repo/ui": "workspace:*",
    "better-auth": "^1.2.0",
    "electron-updater": "^6.7.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@repo/tsconfig": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.2",
    "vite": "^6.0.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  }
}
