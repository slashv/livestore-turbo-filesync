{
  "name": "@repo/electron",
  "version": "1.0.0",
  "private": true,
  "description": "LiveStore Todo - Electron Desktop App",
  "author": "Victor Nyberg",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "deploy:preview": "pnpm build",
    "deploy:prod": "pnpm build && electron-builder --publish always",
    "deploy:prod:mac": "pnpm build && electron-builder --mac --publish always",
    "deploy:prod:win": "pnpm build && electron-builder --win --publish always",
    "deploy:prod:linux": "pnpm build && electron-builder --linux --publish always",
    "test:e2e": "VITE_API_URL=http://localhost:8787 pnpm build && playwright test --config=e2e/playwright.config.ts",
    "test:e2e:headed": "pnpm build && playwright test --config=e2e/playwright.config.ts --headed"
  },
  "dependencies": {
    "@livestore-filesync/core": "workspace:*",
    "@livestore-filesync/image": "workspace:*",
    "@livestore-filesync/opfs": "workspace:*",
    "@livestore/adapter-web": "catalog:",
    "@livestore/livestore": "catalog:",
    "@livestore/peer-deps": "catalog:",
    "@livestore/react": "catalog:",
    "@livestore/sync-cf": "catalog:",
    "@livestore/wa-sqlite": "catalog:",
    "@repo/core": "workspace:*",
    "@repo/schema": "workspace:*",
    "better-auth": "^1.2.0",
    "electron-updater": "^6.7.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "wasm-vips": "^0.0.16"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@repo/tsconfig": "workspace:*",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  }
}
