{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.livestore.filesync-gallery",
  "productName": "LiveStore FileSync Gallery",
  "directories": {
    "output": "release"
  },
  "files": ["dist/**/*"],
  "npmRebuild": false,
  "publish": {
    "provider": "github",
    "owner": "slashv",
    "repo": "livestore-turbo",
    "releaseType": "release"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "public.app-category.productivity",
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true
  }
}
